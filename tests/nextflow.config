/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/
// Resource limits are for nextflow >= 24.04.0 so also have to use the max_* params
process {
    resourceLimits = [
        cpus: 2,
        memory: '8.GB',
        time: '2.h'
    ]
}

params {
    // Limit resources for github actions
    max_cpus                    = 1
    max_memory                  = '8.GB'
    max_time                    = '2.h'
}
